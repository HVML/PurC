#!/usr/bin/purc

# RESULT: [0L, 2L, 4L, 6L, 8L ]

<!DOCTYPE hvml>
<hvml target="void">
    <init as "evenNumbers" with [0L] >
        <iterate onlyif $L.lt($evenNumbers[-1], 8L) with ($evenNumbers[-1] + 2L) >
            <update on $evenNumbers to "append" with $? />
        </iterate>
    </init>

    <exit with $evenNumbers />
</hvml>

