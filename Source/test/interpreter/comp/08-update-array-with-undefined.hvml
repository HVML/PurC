<!DOCTYPE hvml SYSTEM "v: MATH">
<hvml target="void">

    <init as my_array with [1, 1, 2, 3]  />
    <init as count with $DATA.count($my_array) />

    <iterate on 0L onlyif $L.lt($0~, $count)
        with (_ipt[0] + 1) nosetotail >

        <update on $my_array at "[0]" with undefined />
    </iterate>

    <exit with $my_array />
</hvml>
