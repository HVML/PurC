<!DOCTYPE hvml>
<hvml target="html" lang="en">
    <head>
        <link rel="stylesheet" type="text/css" href="calculator.css" />

        <update on="$TIMERS" to="displace">
            [
                { "id" : "clock", "interval" : 1000, "active" : "yes" },
            ]
        </update>
    </head>

    <body>
        <div id="calculator">

            <div id="c_title">
                <h2 id="c_title">Test Observe<br/>
                    <span id="info"></span>
                </h2>
                <observe on="$SYSTEM" for="change:cwd" in="#info">
                    <update on="$@" at="textContent" with="$SYSTEM.cwd()" />
                    <forget on="$SYSTEM" for="change:cwd"/>
                </observe>
                <observe on="$TIMERS" for="expired:clock">
                    <update on="$TIMERS" to="overwrite">
                       { "id" : "clock", "active" : "no" }
                    </update>
                    <update on="#info" at="textContent" with="$EJSON.stringify($SYSTEM.cwd(!'/tmp'))" />
                    <forget on="$TIMERS" for="expired:clock"/>
                </observe>
                <p>this is after observe</p>
            </div>
        </div>
    </body>
</hvml>
