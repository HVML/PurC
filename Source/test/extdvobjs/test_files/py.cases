# test cases for interconversion of variant and PyObject
positive:
    {{ $PY.local.x!( 1L ); $PY.local.x }}
    1L

positive:
    $PY.local.x!( [1, 2, 2, 3] )
    true

positive:
    $PY.local.x
    pyObject::any

positive:
    $PY.local.x()()
    [1, 2, 2, 3]

positive:
    $PY.local.x.reverse()
    null

positive:
    $PY.local.x()()
    [3, 2, 2, 1]

positive:
    {{ $PY.local.x.reverse(); $PY.local.x()() }}
    [1, 2, 2, 3]

positive:
    $PY.local.x.count(2)
    2L

positive:
    $PY.local.x!( [!1, 2, 3] )
    true

positive:
    $PY.local.x()()
    [!1, 2, 3]

positive:
    $PY.local.x!( {a: 'a', b: 'b'} )
    true

positive:
    $PY.local.x()()
    {a: 'a', b: 'b'}

positive:
    $PY.local.x.a
    pyObject::any

positive:
    $PY.local.x.a()()
    'a'

positive:
    $PY.local.x!( 'zh_CN' )
    true

positive:
    $PY.local.x()()
    'zh_CN'

positive:
    $PY.local.x!( [ [! 'a', 'b', 'c' ], { a: 'a', b : 'b', c : 'c' }, true, null, false, 10.0, 5L, '中国' ])
    true

positive:
    $PY.local.x()()
    [ [! 'a', 'b', 'c' ], { a: 'a', b : 'b', c : 'c' }, true, null, false, 10.0, 5L, '中国' ]

